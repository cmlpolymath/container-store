{
    "name": "SmartDev",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
    "features": {
        "ghcr.io/devcontainers/features/nvidia-cuda:1": {
            "installCudnn": false,
            "installToolkit": true,
            "cudaVersion": "12.8"
        },
        "ghcr.io/devcontainers/features/rust:1": {
            "version": "latest"
        },
        "ghcr.io/rocker-org/devcontainer-features/r-apt:0.5.0": {},
        "ghcr.io/devcontainers/features/conda:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-vscode-remote.remote-containers",
                "ms-azuretools.vscode-docker",
                "rust-lang.rust-analyzer",
                "ms-toolsai.jupyter",
                "xelad0m.jupyter-toc",
                "catppuccin.catppuccin-vsc",
                "ms-toolsai.datawrangler",
                "fill-labs.dependi",
                "djsaunders1997.uv-wingman",
                "reditorsupport.r",
                "visualstudioexptteam.vscodeintellicode",
                "charliermarsh.ruff",
                "ms-vscode.live-server",
                // SQL Tools extensions
                "mtxr.sqltools",
                "mtxr.sqltools-driver-mysql",
                "mtxr.sqltools-driver-sqlite",
                "mtxr.sqltools-driver-pg"
                ]
            }
        },
    "remoteUser": "vscode",
    "workspaceFolder": "/workspaces/smart_dev",
    "mounts": [
        "source=/mnt/c/Users/cml_p,target=/mnt/hostuser,type=bind,consistency=cached",
        "source=/mnt/g,target=/mnt/gdrive,type=bind,consistency=cached"
    ],
    "runArgs": [
        "--gpus",
        "all"
    ],
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y curl ca-certificates && curl -fsSL https://astral.sh/uv/install.sh | sh"
}
