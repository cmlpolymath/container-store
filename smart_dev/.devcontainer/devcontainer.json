{
  "name": "SmartDev",

  // ─── Point at the Compose file (in the same .devcontainer folder) ───
  "dockerComposeFile": ["docker-compose.yml"],
  "service": "smart_dev",
  "workspaceFolder": "/workspaces/smart_dev",

  // ─── Features to install Rust, R (via apt), Conda, CUDA, DuckDB CLI ───
  "features": {
    // 1. CUDA (no cuDNN, only toolkit) ── gives nvcc, libcuda, etc.
    "ghcr.io/devcontainers/features/nvidia-cuda:1": {
      "installToolkit": true,
      "installCudnn": false,
      "cudaVersion": "12.8"
    },

    // 2. Rust toolchain
    "ghcr.io/devcontainers/features/rust:1": {
      "version": "latest"
    },

    // 3. R (via apt) ── installs r-base
    "ghcr.io/rocker-org/devcontainer-features/r-apt:0.5.0": {},

    // 4. Miniconda (Conda) ── gives conda, base Python
    "ghcr.io/devcontainers/features/conda:1": {},

    // 5. DuckDB CLI ── installs `duckdb` binary with community extensions “quack”
    "ghcr.io/eitsupi/devcontainer-features/duckdb-cli:1": {
      "communityExtensions": "quack"
    }
  },

  // ─── VS Code extensions to install in the container ───
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-vscode-remote.remote-containers",
        "ms-azuretools.vscode-docker",
        "rust-lang.rust-analyzer",
        "ms-toolsai.jupyter",
        "xelad0m.jupyter-toc",
        "catppuccin.catppuccin-vsc",
        "ms-toolsai.datawrangler",
        "fill-labs.dependi",
        "djsaunders1997.uv-wingman",
        "reditorsupport.r",
        "visualstudioexptteam.vscodeintellicode",
        "charliermarsh.ruff",
        "ms-vscode.live-server",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-mysql",
        "mtxr.sqltools-driver-sqlite",
        "mtxr.sqltools-driver-pg"
      ]
    }
  },

  // ─── Use “vscode” as the unprivileged user (with sudo rights) ───
  "remoteUser": "vscode",

  // ─── Bind mounts (cached for WSL2 performance) ───
  "mounts": [
    "source=/mnt/c/Users/cml_p,target=/mnt/hostuser,type=bind,consistency=cached",
    "source=/mnt/g,target=/mnt/gdrive,type=bind,consistency=cached"
  ],

  // ─── Post-create: install uv CLI, then (later) install Python deps ───
  // Runs as “vscode” user by default, so uv lands in ~/.local/bin and is on PATH.
  "postCreateCommand": [
    "bash",
    "-lc",
    "sudo apt-get update -y && \
    sudo apt-get install -y curl ca-certificates && \
    curl -fsSL https://astral.sh/uv/install.sh | sh && \
    uv pip install --system --no-cache-dir torch==2.5.1 torchvision==0.20.1 torchaudio==2.5.1 --index-url https://download.pytorch.org/whl/cu121 && \
    uv pip install --system --no-cache-dir -r /workspaces/smart_dev/requirements.txt"
  ],
  "postStartCommand": "sudo chown -R vscode:vscode /workspaces/smart_dev"
}
